{
  "name": "query-gaulish-db",
  "version": "1.0.0",
  "description": "Run a SQL query on GaulishDB",
  "author": "Phillip Maier",
  "license": "MIT",
  "dependencies": {
    "pg": "^8.5.1"
  },
  "config": {
    "env_path": "../../../../.env"
  },
  "scripts": {
    "dev": "tsnd -r dotenv/config --respawn src/app.ts dotenv_config_path=${PWD}/$npm_package_config_env_path -- isTesting ",
    "build": "tsc",
    "docker:build": "docker build -t gaulish .",
    "docker:dev": "docker run --rm --env-file=$npm_package_config_env_path --name gaulish -p 9000:8080 gaulish",
    "dev:docker": "npm run build && npm run docker:build && npm run docker:dev",
    "ecr:tag": "dotenv -e $npm_package_config_env_path -- cross-var docker tag gaulish:latest %AWS_ACCOUNT_NUMBER%.dkr.ecr.%AWS_REGION%.amazonaws.com/gaulish:latest",
    "ecr:push": "dotenv -e $npm_package_config_env_path -- cross-var docker push %AWS_ACCOUNT_NUMBER%.dkr.ecr.%AWS_REGION%.amazonaws.com/gaulish:latest",
    "deploy": "npm run ecr:tag && npm run ecr:push"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.51",
    "@types/node": "^13.13.5",
    "@types/pg": "^7.14.7",
    "aws-sdk": "^2.655.0",
    "cross-var": "^1.1.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^3.8.3"
  }
}
